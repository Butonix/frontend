{
  "name": "frontend",
  "description": "Frontend side of the King of Travel project",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "test": "set CI=true && npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*",
    "lint:css": "stylelint src/**/*.{css,svelte}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "svelteSortOrder": "markup-scripts-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true
  },
  "stylelint": {
    "extends": "@logux/stylelint-config",
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "dependencies": {
    "-": "0.0.1",
    "@editorjs/header": "^2.5.0",
    "@editorjs/list": "^1.5.0",
    "@editorjs/marker": "^1.2.2",
    "@editorjs/table": "^1.2.2",
    "@github/auto-check-element": "^5.1.3",
    "@rollup/plugin-json": "^4.1.0",
    "compression": "^1.7.1",
    "connect-pg-simple": "^6.1.0",
    "express-session": "^1.17.1",
    "http-proxy-middleware": "^0.20.0",
    "pg": "^7.18.2",
    "polka": "next",
    "sirv": "^0.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/runtime": "^7.10.2",
    "@editorjs/editorjs": "^2.18.0",
    "@editorjs/image": "^2.4.1",
    "@logux/stylelint-config": "^0.1.3",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "postcss-custom-media": "^7.0.8",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-svelte": "^5.2.2",
    "rollup-plugin-terser": "^5.3.0",
    "sapper": "^0.27.15",
    "stylelint": "^13.6.0",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svelte": "^3.23.2",
    "svelte-flatpickr": "^2.4.0",
    "svelte-preprocess": "^3.9.7",
    "svelte-select": "^3.8.1"
  }
}
